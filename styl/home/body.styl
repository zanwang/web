#index-body-wrap
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  &:before
    content: ""
    display: inline-block
    vertical-align: middle
    height: 100%

#index-body
  display: inline-block
  vertical-align: middle
  padding: 40px 50px

#tagline
  color: color-blue
  font-size: 70px
  line-height: 1
  font-family: font-title
  font-weight: 200
  strong
    font-weight: 600

#signup-btn
  margin-top: 40px