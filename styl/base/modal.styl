.modal
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 10000
  overflow-y: scroll
  display: none
  &.on
    display: block

.modal-back
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: #000
  opacity: 0.7

.modal-dialog
  width: 450px
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  background: #333
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.3)
  border-radius: 3px

.modal-header
  margin: 20px 25px

.modal-title
  color: color-blue
  font-family: font-title
  font-size: 1.5em
  font-weight: 300

.modal-body
  padding: 0 25px
  color: color-minor
  line-height: 1.6
  p
    margin: 20px 0
  strong
    font-weight: bold
  .input-group
    margin: 15px 0
  .input-error
    background: #222
    color: color-minor
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2)
    &:after
      border-color: transparent @background transparent transparent

.modal-input
  border: none
  padding: 8px 15px
  background: #444
  border: 1px solid #666
  color: #ddd

.modal-close-btn
  position: absolute
  right: 0
  top: 0
  padding: 20px 25px
  font-size: 30px
  line-height: 20px
  color: #666
  cursor: pointer
  user-select: none
  &:hover
    color: #ddd

.modal-footer
  clearfix()
  margin: 20px 0

.modal-btn
  float: right
  background: none
  color: color-minor
  font-family: font-title
  font-weight: 600
  margin-left: 10px
  &:hover
    background: #444
  &:active
    background: #555
  &:disabled
    background: none

.modal-error
  color: #ddd
  position: absolute
  bottom: 28px
  left: 25px
  line-height: 1
  white-space: nowrap
  font-weight: bold
  &:before
    content: "\f071"
    font-family: font-icon
    color: color-pink
    padding-right: 5px
    font-weight: normal