.modal
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 10000
  overflow-y: scroll
  display: none
  &.on
    display: block

.modal-back
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: #000
  opacity: 0.5

.modal-dialog
  width: 450px
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  background: #333
  box-shadow: 0 3px 20px rgba(0, 0, 0, 0.2)
  border-radius: 3px

.modal-header
  padding: 20px 25px

.modal-title
  color: color-blue
  font-family: font-title
  font-size: 1.5em
  font-weight: 300

.modal-body
  padding: 0 25px 5px
  color: color-minor
  line-height: 1.6
