#error-wrap
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

#error
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  text-align: center

#error-title
  font-weight: bold
  font-family: font-title
  font-weight: 600
  font-size: 2em
  line-height: 1
  color: color-minor
  text-shadow: 0 1px #fff

#error-desc
  line-height: 1.6
  padding: 25px 0
  color: color-minor