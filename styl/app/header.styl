#header-wrap
  background: #fff
  border-bottom: 1px solid color-border

#header
  clearfix()
  padding: 30px 0

#logo
  float: left
  a
    text-decoration: none
    font-family: font-title
    font-size: app-header-height
    line-height: @font-size
    font-weight: 300
    color: color-blue

#user-nav
  float: right
  position: relative
  display: none
  &.loaded
    display: block

#user-nav-link
  padding-right: 20px
  cursor: pointer
  position: relative
  display: block
  &:before
    content: "\f078"
    font-family: font-icon
    font-size: 12px
    color: color-minor
    line-height: @font-size
    position: absolute
    right: 0
    top: 50%
    margin-top: @font-size * -0.5

#user-nav-avatar
  width: app-header-height
  height: app-header-height
  border-radius: 50%
  display: block

#user-nav-dropdown-name
  font-weight: bold
  color: color-minor
  padding-right: 40px
  &:after
    content: "\f058"
    visibility: hidden
    color: color-blue
    padding-left: 6px
    font-weight: normal
    font-family: font-icon
    position: absolute
    right: 16px
    .activated &
      visibility: visible

#user-nav-dropdown-settings
  &:before
    content: "\f0ad"

#user-nav-dropdown-logout
  &:before
    content: "\f08b"