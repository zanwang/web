.settings-form
  background: #fff
  padding: 0 30px
  border: 1px solid color-border
  border-radius: 3px

.settings-input-group
  clearfix()
  margin: 30px 0

.settings-input-label
  float: left
  width: 30%
  font-weight: bold
  line-height: 1.6

.settings-input-content
  float: right
  width: 70%

.settings-input-password
  width: 50%
  float: left
  padding-right: 30px
  &:last-of-type
    padding-right: 0

.settings-input-error
  color: color-pink
  padding-top: 10px
  font-size: 0.9em
  font-weight: bold
  &:before
    content: "\f071"
    font-family: font-icon
    color: color-pink
    padding-right: 5px
    font-weight: normal

.settings-label-link
  font-size: 0.9em
  color: color-minor
  font-weight: normal
  cursor: pointer
  &:hover
    color: color-blue